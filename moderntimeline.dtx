% \begin{macro}{\tltextstart}
%    \begin{macrocode}
\newcommand{\tltextstart}[1]{%
%    \end{macrocode}
%    \begin{macrocode}
   \tikzset{
       tlstartyear/.style={
           font=#1,
           name=tlstartyear,
           above=\tl@textstartabove,
           inner xsep=0pt,
           anchor=base west,
       }
   }
}
